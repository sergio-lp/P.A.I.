<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="br.unicamp.prevencaodeacidentes">

    <uses-permission-sdk-23 android:name="android.permission.ACCESS_FINE_LOCATION" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/maps_key" />

        <activity
            android:name="br.unicamp.prevencaodeacidentes.activities.MainActivity"
            android:theme="@style/AppTheme.Launcher">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name="br.unicamp.prevencaodeacidentes.activities.InfoActivity" />

        <activity android:name="br.unicamp.prevencaodeacidentes.activities.MarkerActivity" />

        <activity android:name="br.unicamp.prevencaodeacidentes.activities.DefaultActivity" />

    </application>

</manifest>