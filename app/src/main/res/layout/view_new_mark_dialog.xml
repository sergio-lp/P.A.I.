<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:id="@+id/mark_dialog_root">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/averiasanslibre"
            android:text="Título"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/ed_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Descreva o perigo em poucas palavras" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="26dp"
            android:fontFamily="@font/averiasanslibre"
            android:text="Descrição"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/ed_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Descreva o perigo mais detalhadamente" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="26dp"
            android:fontFamily="@font/averiasanslibre"
            android:text="Tipo de perigo"
            android:textSize="18sp" />

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="8dp">

                <br.unicamp.prevencaodeacidentes.models.Chip
                    android:id="@+id/chip_fall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:background_selected="@color/markRed"
                    app:chip_text="Queda" />

                <br.unicamp.prevencaodeacidentes.models.Chip
                    android:id="@+id/chip_animals"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    app:background_selected="@color/markBlue"
                    app:chip_text="Animais" />

                <br.unicamp.prevencaodeacidentes.models.Chip
                    android:id="@+id/chip_vegetation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    app:background_selected="@color/markGreen"
                    app:chip_text="Mato alto" />

                <br.unicamp.prevencaodeacidentes.models.Chip
                    android:id="@+id/chip_electricity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    app:background_selected="@color/markOrange"
                    app:chip_text="Rede elétrica" />

                <br.unicamp.prevencaodeacidentes.models.Chip
                    android:id="@+id/chip_assault"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    app:background_selected="@color/markMagenta"
                    app:chip_text="Risco de assalto" />

            </LinearLayout>

        </HorizontalScrollView>

    </LinearLayout>

</ScrollView>