<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:foreground="?attr/selectableItemBackground">

    <RelativeLayout
        android:id="@+id/btn_relative"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/button_shape">

        <ImageView
            android:id="@+id/btn_img_left"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_centerVertical="true"
            android:layout_marginEnd="6dp"
            android:layout_marginStart="12dp"
            android:src="@drawable/warning" />

        <TextView
            android:id="@+id/btn_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@id/btn_img_left"
            android:layout_toStartOf="@id/btn_img_right"
            android:fontFamily="@font/averiasanslibre"
            android:paddingBottom="8dp"
            android:paddingTop="8dp"
            android:text="Traumas e precauções gerais"
            android:textAlignment="center"
            android:textColor="#FFF"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/btn_img_right"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="12dp"
            android:layout_marginStart="6dp"
            android:src="@drawable/warning" />

    </RelativeLayout>

</LinearLayout>
